@using System.Drawing
@using Highcharts4Net
@using Highcharts4Net.Library.Enums
@using Highcharts4Net.Library.Helpers
@using Highcharts4Net.Library.Options
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Line charts » Logarithmic Axis";
}

@Html.Highcharts4Net().LineChart(settings =>
{

    settings.SetTitle(s =>
    {
        s.Text = "Logarithmic axis demo";
    });

    settings.AddXAxis(s=>
    {
        s.TickInterval = 1;
    });

    settings.AddYAxis(s =>
    {
        s.Type = AxisTypes.Logarithmic;
        s.MinorTickInterval = 0.1;
    });

    settings.SetTooltip(s=>
    {
        s.HeaderFormat = "<b>{series.name}</b><br />";
        s.PointFormat = "x = {point.x}, y = {point.y}";
    });

    settings.AddSeries(s=>
    {
        s.Data = new Data(new NumberOrDateTime?[]
        {
            1, 2, 4, 8, 16, 32, 64, 128, 256, 512
        });
        s.PointStart = 1;
    });

}).Render()

